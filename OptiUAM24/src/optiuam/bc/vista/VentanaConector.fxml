      <RadioButton fx:id="rbtn1550" layoutX="246.0" layoutY="84.0" mnemonicParsing="false" onAction="#getLongitudOnda" text="1550 nm" toggleGroup="$LongitudOnda" />
      <Label fx:id="lblModo" layoutX="94.0" layoutY="125.0" text="Mode" />
